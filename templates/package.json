{
  "name": "<% if (packageScope) { %>@<%= packageScope %>/<% } %><%= packageName %>",
  "version": "1.0.0",
  "main": "lib/index.js",
  <% if (repository) { %>"license": "<%=license%>",<% } %>
  <% if (homepage) { %>"homepage": "<%=homepage%>",<% } %>
  
  "scripts": {
    "build": <% if (typescript) { %>"tsc"<% } else { %>"babel src --out-dir ./lib --source-maps"<% } %>,
    "watch": <% if (typescript) { %>"tsc --watch"<% } else { %>"yarn build --watch"<% } %>,
    "clean": "rm -rf lib/*<% if (typescript) { %> && rm -f .tsbuildinfo<% } %>",
    "rebuild": "yarn clean && yarn build",
    "lint": "eslint src --ext .ts,.tsx",
    "prepublishOnly": "yarn lint && yarn rebuild"    
  }

  <% if (repository) { %>,
  "repository": <%= JSON.stringify(repository) %>,
  <% } %>

  <% if (publishConfig) { %>,
  "publishConfig": <%= JSON.stringify(repository) %>,
  <% } %>
  
  <% if (dependencies) { %>,
  "dependencies": <%= JSON.stringify(dependencies) %>,
  <% } %>

  <% if (devDependencies) { %>,
  "devDependencies": <%= JSON.stringify(devDependencies) %>,
  <% } %>

  <% if (peerDependencies) { %>,
  "peerDependencies": <%= JSON.stringify(peerDependencies) %>,
  <% } %>
}